      navigationContainer.classList.toggle("show_nav");
    });

    navigationContainer.addEventListener("mouseleave", () => {
      menuIcon.classList.toggle("show_menu");
      navigationContainer.classList.toggle("show_nav");
    });
  </script>
</body>

</html>